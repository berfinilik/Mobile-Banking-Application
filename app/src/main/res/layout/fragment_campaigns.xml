<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2D5CE8"
                android:gravity="center"
                android:padding="16dp"
                android:text="Avantajlar/Kampanyalar"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFF"
                android:padding="12dp"
                android:paddingTop="10dp"
                android:text="Süper Şube müşterilerimiz Genel Avantajlardan doğrudan, belirlenen kriterlerden 5 tanesini gerçekleştiren müşterilerimiz ise ayrıca Ek Avantajlardan yararlanabilecektir."
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView1"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="148dp"
                        android:layout_height="61dp"
                        android:layout_marginTop="76dp"
                        android:gravity="center"
                        android:text="EFT/FAST/Havale işlemlerinde sıfır masraf!"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/cardView1Image"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sifirmasraf"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView2"
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/cardView2Image"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/yuzdeellindirim"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="152dp"
                        android:layout_height="59dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="76dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="EFT/FAST işlemlerinde %50 indirim"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView3"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/cardView3Image"
                        android:layout_width="49dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dijitalkanalsifirmasraf"
                        app:layout_constraintBottom_toTopOf="@+id/textView12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="182dp"
                        android:layout_height="77dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="72dp"
                        android:gravity="center"
                        android:text="Dijital kanallardan gerçekleştirilen havalelerde sıfır masraf!"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView4"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/cardView4Image"
                        android:layout_width="61dp"
                        android:layout_height="51dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/bankkartlira"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.585" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="150dp"
                        android:layout_height="63dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="80dp"
                        android:gravity="center"
                        android:text="10.000 TL ve üzeri harcamanıza, 50 TL Bankkart Lira "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView6"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/cardView5Image"
                        android:layout_width="55dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="68dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/vadelimevduataekfaiz"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="120dp"
                        android:layout_height="63dp"
                        android:layout_marginTop="64dp"
                        android:layout_marginEnd="36dp"
                        android:gravity="center"
                        android:text="Vadeli mevduata ek faiz "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView7"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textAlignment="center">

                    <ImageView
                        android:id="@+id/cardView6Image"
                        android:layout_width="50dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/aidatsizkredikarti"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="95dp"
                        android:layout_height="63dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:text="Aidatsız Kredi Kartı"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.25"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView5"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/cardView7Image"
                        android:layout_width="75dp"
                        android:layout_height="67dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/taksit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="160dp"
                        android:layout_height="59dp"
                        android:gravity="center"
                        android:text="Kart işlemlerini sonradan taksitlendirme imkanı"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.87"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView7Image" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView8"
                    android:layout_width="214dp"
                    android:layout_height="158dp"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/cardView8Image"
                        android:layout_width="77dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/atm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="151dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Tüm kamu ATM'leri işlem limitleri dahilinde masrafsız!"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView8Image" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


