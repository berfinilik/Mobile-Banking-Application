<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.liabilites.LiabilitesFragment">

    <LinearLayout
        android:id="@+id/linearLayoutBorclar"
        android:layout_width="405dp"
        android:layout_height="61dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2D5CE8"
            android:gravity="center"
            android:padding="16dp"
            android:text="Borçlarım"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/borclarimLinearLayout"
        android:layout_width="405dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBorclar">

        <TextView
            android:id="@+id/tt60"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Toplam Borçlarım"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewToplamBorc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutBorclarim"
        android:layout_width="385dp"
        android:layout_height="271dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/borclarimLinearLayout">

        <com.berfinilik.bankingapplication.customview.CircleOutlineView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            tools:ignore="ExtraText" />

        <TextView
            android:id="@+id/borclarimTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:text="%100"
            android:textColor="@color/blue"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout35"
        android:layout_width="412dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBorclarim">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="%100,00 Toplam Kredi Kartı Borcu TL" />

        <TextView
            android:id="@+id/textViewKredi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="73dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout35">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="183dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:text="Kredi Kartı Borçlarınız" />

            <TextView
                android:id="@+id/textViewKrediKartNo"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/textViewBorc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="30dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
